<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                android:weightSum="3">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/aqua">
                </ImageView>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:src="@drawable/teh"
                    android:scaleType="fitXY">

                </ImageView>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:src="@drawable/pocari"
                    android:scaleType="fitXY">

                </ImageView>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:weightSum="3"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aqua"
                android:layout_marginLeft="40dp"
                android:textSize="15sp"
                android:textColor="#000">

            </TextView>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teh Botol"
                android:layout_marginLeft="75dp"
                android:textColor="#000"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pocari Sweet"
                android:layout_marginLeft="50dp"
                android:textColor="#000"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:weightSum="3"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tvharga1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.5000"
                android:layout_marginLeft="30dp"
                android:textSize="15sp"
                android:textColor="#000">

            </TextView>
            <TextView
                android:id="@+id/tvharga2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.6000"
                android:layout_marginLeft="65dp"
                android:textColor="#000"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:id="@+id/tvharga3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.8000"
                android:layout_marginLeft="65dp"
                android:textColor="#000"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:weightSum="3"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/st1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Tersedia"
                android:layout_marginLeft="12dp"
                android:textSize="15sp"
                android:textColor="#000">

            </TextView>
            <TextView
                android:id="@+id/st2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Tersedia"
                android:layout_marginLeft="25dp"
                android:textColor="#000"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:id="@+id/st3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Tersedia"
                android:layout_marginLeft="25dp"
                android:textColor="#000"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:weightSum="3"
            android:layout_centerHorizontal="true">

           <Button
               android:id="@+id/pesan1"
               android:layout_width="100dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:text="Pesan">

           </Button>
            <Button
                android:id="@+id/pesan2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Pesan">

            </Button>
            <Button
                android:id="@+id/pesan3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Pesan">

            </Button>
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>